{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build UHDM plugin in debug mode"
        },
        {
            "label": "configure-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build-debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "detail": "Configure UHDM plugin for debug build"
        }
    ]
}